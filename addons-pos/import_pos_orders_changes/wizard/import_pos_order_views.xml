<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="import_pos_order_form_view" model="ir.ui.view">
        <field name="name">import.pos.order.form.view</field>
        <field name="model">import.pos.order</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="excel_file" required="1"/>
                    </group>
                    <group>
                        <field name="session_id" options="{'no_create_edit': True}"/>
                    </group>
                </group>
                 <div class="text-muted">
                    Format:<br/>
                     Import excel file format.
                </div>
                <footer>
                    <button string="Import" name="action_import_pos_order" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="action_import_pos_orders" model="ir.actions.act_window">
        <field name="name">Import POS Order Script</field>
        <field name="res_model">import.pos.order</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_import_pos_orders"
              parent="point_of_sale.menu_point_config_product" action="action_import_pos_orders"
              sequence="100"/>

</odoo>